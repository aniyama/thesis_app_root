{
	"name": "Go",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "go",
	"workspaceFolder": "/go/src/app",
	"settings": {
		"terminal.integrated.shell.linux": "/bin/sh",
		"go.toolsManagement.checkForUpdates": "off",
		"go.gopath": "/go",
		"go.gocodeAutoBuild": true,
		"go.formatTool": "gofmt",
		"go.useLanguageServer": true,
		"editor.formatOnSave": false,
		"[go]": {
			"editor.formatOnSave": true
		}
	},
	"extensions": [
		"golang.go"
	]
}